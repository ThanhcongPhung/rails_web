<div class="channel-content">
  <p class="title-topic-channel">Channels</p>
  <% if has_role?(:admin) %>
  <div style="float: right;">
    <div class="level-right">
      <%= link_to 'New Channel', new_channel_path, style: 'float:right;', class:'button create' %>
    </div>
  </div>
  <hr style="clear: both;">

  <table class="table">
    <tbody>
      <% @channels.each do |channel| %>
      <tr>
        <td><%= link_to channel.channel, channel %></td>
        <td>
          <div class="action-channel">         
            <%= link_to edit_channel_path(channel), class:"button-edit" do %>
              <i class="fa fa-pencil text-success" aria-hidden="true"></i>
            <% end  %>           
            <%= link_to channel, class:'button-delete', method: :delete, data: { confirm: "Are you sure you want to delete this channel? " } do %>
              <i class="fa fa-trash-o text-danger" aria-hidden="true"></i>     
            <% end  %>       
          </div>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <% else %>
  <p class="has-text-center">Sorry! You don't have access this page.</p>
  <% end %>
</div>